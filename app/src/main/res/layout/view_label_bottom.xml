<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingLeft="13dp">

    <TextView
        android:id="@+id/tag_input_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Common Tags"
        android:textColor="#9b6b6c"
        android:textSize="16sp" />

    <View
        android:id="@+id/split_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="#9b6b6c" />

    <com.customview.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|top">

        <TextView
            style="@style/text_default"
            android:text="It's just a label" />

        <TextView
            style="@style/text_default"
            android:text="nice" />

        <TextView
            style="@style/text_default"
            android:text="cute" />

        <TextView
            style="@style/text_default"
            android:text="Ha ha ha ha" />

        <TextView
            style="@style/text_default"
            android:text="I do not know what the recommended" />

        <TextView
            style="@style/text_default"
            android:text="\@Dada Dadasky" />

        <TextView
            style="@style/text_default"
            android:text="Hello , summer" />

    </com.customview.FlowLayout>

</LinearLayout>